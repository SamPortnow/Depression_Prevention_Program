<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <AutoCompleteTextView
        android:id="@+id/add_event_user_thought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/add_event_user_thought_hint"
        android:inputType="text"
    	android:scrollbars="vertical"
        android:maxLength="60" />
        
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
      	
	<TextView 
	    android:id="@+id/pos_or_neg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/pos_or_neg"
	  ></TextView>
	
	  <RadioGroup
        android:id="@+id/pos_neg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="0">
        
        <RadioButton
            android:id="@+id/radioPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_pos"  />
        
           <RadioButton
            android:id="@+id/radioNeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_neg"
            />
     </RadioGroup>
 </LinearLayout>
</LinearLayout>