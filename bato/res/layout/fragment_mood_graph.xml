<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mood_graph_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle" >

        <Button
            android:id="@+id/mood_graph_previous_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_graph_previous_day" />
        
        <Button
            android:id="@+id/mood_graph_current_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/mood_graph_next_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_graph_next_day" />
    </LinearLayout>

</LinearLayout>