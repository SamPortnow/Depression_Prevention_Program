<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">
        
    <com.example.bato.BattleField
        android:id="@+id/battle_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_container"
      /> 
    	<LinearLayout
        android:id="@+id/pos_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_above="@+id/edit_container"
        >        
    	</LinearLayout>
        <HorizontalScrollView
        android:id="@+id/scroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"> 
        
        <LinearLayout
        android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/mind_reading_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/Mind_reading_title"
            >
        </TextView>
        <TextView
            android:id="@+id/mind_reading"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Mind_reading"
            >
        </TextView>
        
    	</LinearLayout>
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/fortune_telling_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Fortunetelling_title"
            >
        </TextView>
        <TextView
            android:id="@+id/fortune_telling"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Fortunetelling"
            >
        </TextView>
        
    	</LinearLayout>
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/Catastrophizing_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Catastrophizing_title"
            >
        </TextView>
        <TextView
            android:id="@+id/catastrophizing"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Catastrophizing"
            >
        </TextView>
        
    	</LinearLayout>
    	    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/labeling_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Labeling_title"
            >
        </TextView>
        <TextView
            android:id="@+id/labeling"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Labeling"
            >
        </TextView>
        
    	</LinearLayout>
        <LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/discounting_positives_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Discounting_positives_title"
            >
        </TextView>
        <TextView
            android:id="@+id/discounting_positives"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Discounting_positives"
            >
        </TextView>
        
    	</LinearLayout>
    	
      <LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/dark_glasses_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Dark_glasses_title"
            >
        </TextView>
        <TextView
            android:id="@+id/dark_glass"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Dark_glasses"
            >
        </TextView>
        
    	</LinearLayout>
    	
		<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/black_and_white_thinking_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Black_and_white_thinking_title"
            >
        </TextView>
        <TextView
            android:id="@+id/black_and_white_thinking"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Black_and_white_thinking"
            >
        </TextView>
        
    	</LinearLayout>
    	
	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/overgeneralizing_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Overgeneralizing_title"
            >
        </TextView>
        <TextView
            android:id="@+id/overgeneralizing"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Overgeneralizing"
            >
        </TextView>
    	</LinearLayout>
    	
		<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/personalizing_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Personalizing_title"
            >
        </TextView>
        <TextView
            android:id="@+id/personalizing"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Personalizing"
            >
        </TextView>
    	</LinearLayout>
      <LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/shoulds_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Shoulds_title"
            >
        </TextView>
        <TextView
            android:id="@+id/shoulds"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Shoulds"
            >
        </TextView>
        
    	</LinearLayout>
    	
      
 	  <LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"        
    	    android:orientation="vertical"
        >
       <TextView
            android:id="@+id/unfair_comparisons_title"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="@string/Unfair_comparisons_title"
            >
        </TextView>
        <TextView
            android:id="@+id/unfair_comparisons"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:textSize="16sp"
            android:text="@string/Unfair_comparisons"
            >
        </TextView>
        
    	</LinearLayout>
    </LinearLayout>	
   </HorizontalScrollView>
       

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/edit_container"
    	android:visibility="gone">
      <AutoCompleteTextView
        android:id="@+id/thoughts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="140"
        android:layout_weight="1"
        android:padding="15dip"	
        android:hint="@string/thought_it"
        />   
        
    <Button
        android:id="@+id/scale_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dip"	
		android:layout_weight="0"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/scale_it"
        />  
        </LinearLayout>
     
</RelativeLayout>